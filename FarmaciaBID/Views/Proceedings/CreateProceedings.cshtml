@model FarmaciaBID.Models.Expediente

@{
    ViewBag.Title = "Agregar Expediente";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />

    <div class="form-horizontal m-4">
        <h4>Nuevo Expediente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-4">
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                @Html.EditorFor(model => model.fechaCreacion, new { htmlAttributes = new { @class = "form-control datepicker", placeholder = "Fecha creación", required = "required" } })
                @Html.ValidationMessageFor(model => model.fechaCreacion, "", new { @class = "text-danger" })
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi-person-circle d-none invisible" aria-hidden="true"></i></span>
                @Html.EditorFor(model => model.notas, new { htmlAttributes = new { @class = "form-control", placeholder = "Notas", required = "required" } })
                @Html.ValidationMessageFor(model => model.notas, "", new { @class = "text-danger" })
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi-building" aria-hidden="true"></i></span>
                @Html.DropDownListFor(model => model.idPaciente, (SelectList)ViewBag.Paciente, "Seleccione un paciente", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idPaciente, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Create" class="btn btn-primary" id="guardarBtn"><i class="bi-floppy" aria-hidden="true"></i> Guardar</button>
            </div>
        </div>
        <hr />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                endDate: new Date()
            });
        });
    </script>
}
