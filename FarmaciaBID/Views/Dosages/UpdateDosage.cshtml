@model FarmaciaBID.Models.Dosage

@{
    ViewBag.Title = "Editar Dosificacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Editar dosificacion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row gx-3 mb-3">
        <div class="col-md-6 d-none invisible">
            <div class="input-group">
                <span class="input-group-text"><i class="bi-person-circle" aria-hidden="true"></i></span>
                @Html.EditorFor(model => model.idDosificacion, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese nombre", required = "required" } })
                @Html.ValidationMessageFor(model => model.idDosificacion, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text"><i class="bi-person-circle" aria-hidden="true"></i></span>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese nombre", required = "required" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Agregar más campos según sea necesario -->
    </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Create" class="btn btn-primary" id="guardarBtn"><i class="bi-floppy" aria-hidden="true"></i> Guardar</button>

            </div>
        </div>
        <hr />
    </div>
}


@section Scripts {
}

