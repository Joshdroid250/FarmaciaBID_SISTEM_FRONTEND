@model FarmaciaBID.Models.LotPharma

@{
    ViewBag.Title = "Nueva Dosificacion";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal m-4">
        <h4>Crear Dosificacion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row gx-3 mb-3">

        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text"><i class="bi-capsule" aria-hidden="true"></i></span>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese nombre", required = "required" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Agregar más campos según sea necesario -->
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text"><i class="bi-capsule" aria-hidden="true"></i></span>
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control", placeholder = "Descripcion", required = "required" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text"><i class="bi-capsule" aria-hidden="true"></i></span>
                @Html.EditorFor(model => model.concentracion, new { htmlAttributes = new { @class = "form-control", placeholder = "concentracion", required = "required" } })
                @Html.ValidationMessageFor(model => model.concentracion, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text"><i class="bi-capsule" aria-hidden="true"></i></span>
                @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control", placeholder = "Cantidad", required = "required" } })
                @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi-building" aria-hidden="true"></i></span>
                @Html.DropDownListFor(model => model.idPresentacion, (SelectList)ViewBag.Presentaciones, "Seleccione una presentacion", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idPresentacion, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Create" class="btn btn-primary" id="guardarBtn"><i class="bi-floppy" aria-hidden="true"></i>Guardar</button>

            </div>
        </div>
        <hr />
    </div>
}
@section Scripts {
}


